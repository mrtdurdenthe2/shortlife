{
  "compilerOptions": {
     "plugins": [
      // ... other LSPs (if any) and as last
      {
        "name": "@effect/language-service",
"diagnosticSeverity": {}
      }
    ],   
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "types": [
      "bun-types"
    ]
  }
}
